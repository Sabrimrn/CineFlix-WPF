<Window x:Class="CineFlix_WPF.RegisseurWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Regisseur" Height="350" Width="500"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="15">
        <StackPanel>
            <Label Content="Naam:"/>
            <TextBox x:Name="NaamTextBox"/>

            <Label Content="Geboortejaar:"/>
            <TextBox x:Name="GeboortejaarTextBox"/>

            <Label Content="Nationaliteit:"/>
            <TextBox x:Name="NationaliteitTextBox"/>

            <Label Content="Biografie:"/>
            <TextBox x:Name="BiografieTextBox" Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Opslaan" Width="100" Margin="0,0,10,0" Click="SaveButton_Click"/>
                <Button Content="Annuleren" Width="100" IsCancel="True"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>