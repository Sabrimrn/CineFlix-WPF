<Window x:Class="CineFlix_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CineFlix - Beheer" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <DockPanel>
        <!-- Menu -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Bestand">
                <MenuItem Header="_Uitloggen" Click="LogoutMenuItem_Click"/>
                <Separator/>
                <MenuItem Header="_Afsluiten" Click="ExitMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="_Navigatie">
                <MenuItem Header="Films" Click="FilmsMenuItem_Click"/>
                <MenuItem Header="Regisseurs" Click="RegisseursMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="_Beheer" x:Name="AdminMenu" Visibility="Collapsed">
                <MenuItem Header="Gebruikers en Rollen" Click="UsersMenuItem_Click"/>
            </MenuItem>
        </Menu>

        <!-- Statusbalk -->
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlock" Margin="5,0"/>
            </StatusBarItem>
        </StatusBar>

        <!-- Hoofdinhoud met Tabs -->
        <TabControl x:Name="MainTabControl">
            <!-- Films Tab -->
            <TabItem Header="Films">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="Nieuwe Film" Click="AddFilmButton_Click" Margin="0,0,10,0"/>
                        <Label Content="Zoek op titel:" VerticalAlignment="Center"/>
                        <TextBox x:Name="FilmSearchBox" Width="250" TextChanged="FilmSearchBox_TextChanged"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1" x:Name="FilmsDataGrid" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Titel" Binding="{Binding Titel}" Width="2*"/>
                            <DataGridTextColumn Header="Jaar" Binding="{Binding Releasejaar}" Width="Auto"/>
                            <DataGridTextColumn Header="Regisseur" Binding="{Binding Regisseur.Naam}" Width="*"/>
                            <DataGridTextColumn Header="Rating" Binding="{Binding Rating}" Width="Auto"/>
                            <DataGridTemplateColumn Header="Acties" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="Bewerken" Margin="2" Click="EditFilmButton_Click" Tag="{Binding}"/>
                                            <Button Content="Verwijderen" Margin="2" Click="DeleteFilmButton_Click" Tag="{Binding}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Regisseurs Tab -->
            <TabItem Header="Regisseurs">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="Nieuwe Regisseur" Click="AddRegisseurButton_Click" Margin="0,0,10,0"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1" x:Name="RegisseursDataGrid" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Naam" Binding="{Binding Naam}" Width="2*"/>
                            <DataGridTextColumn Header="Geboortejaar" Binding="{Binding Geboortejaar}" Width="*"/>
                            <DataGridTextColumn Header="Nationaliteit" Binding="{Binding Nationaliteit}" Width="*"/>
                            <DataGridTextColumn Header="Aantal Films" Binding="{Binding AantalFilms}" Width="*"/>
                            <DataGridTemplateColumn Header="Acties" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="Bewerken" Margin="2" Click="EditRegisseurButton_Click" Tag="{Binding}"/>
                                            <Button Content="Verwijderen" Margin="2" Click="DeleteRegisseurButton_Click" Tag="{Binding}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>