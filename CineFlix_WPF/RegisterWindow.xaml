<Window x:Class="CineFlix_WPF.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nieuwe Gebruiker Registreren" Height="450" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="15">
        <StackPanel>
            <TextBlock Text="Nieuw Account" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <Label Content="Voornaam:"/>
            <TextBox x:Name="FirstNameTextBox"/>

            <Label Content="Achternaam:"/>
            <TextBox x:Name="LastNameTextBox"/>

            <Label Content="E-mail (is gebruikersnaam):"/>
            <TextBox x:Name="EmailTextBox"/>

            <Label Content="Wachtwoord:"/>
            <PasswordBox x:Name="PasswordBox"/>

            <Label Content="Bevestig Wachtwoord:"/>
            <PasswordBox x:Name="ConfirmPasswordBox"/>

            <TextBlock x:Name="ErrorMessage" Foreground="Red" TextWrapping="Wrap" Margin="0,10,0,0" MinHeight="30"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Registreren" Width="100" Margin="0,0,10,0" Click="RegisterButton_Click"/>
                <Button Content="Annuleren" Width="100" IsCancel="True" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>