<Window x:Class="CineFlix_WPF.GenreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Genre" Height="250" Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="15">
        <StackPanel>
            <Label Content="Genre Naam:"/>
            <TextBox x:Name="GenreNaamTextBox"/>

            <Label Content="Beschrijving:"/>
            <TextBox x:Name="BeschrijvingTextBox" Height="60" TextWrapping="Wrap"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Opslaan" Width="100" Margin="0,0,10,0" Click="SaveButton_Click"/>
                <Button Content="Annuleren" Width="100" IsCancel="True"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>