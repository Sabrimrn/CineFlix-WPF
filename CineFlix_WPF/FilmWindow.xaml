<Window x:Class="CineFlix_WPF.FilmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Film Bewerken" Height="450" Width="500"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="15">
        <StackPanel>
            <Label Content="Titel:"/>
            <TextBox x:Name="TitelTextBox"/>

            <Label Content="Releasejaar:"/>
            <TextBox x:Name="ReleasejaarTextBox"/>

            <Label Content="Duur (minuten):"/>
            <TextBox x:Name="DuurMinutenTextBox"/>

            <Label Content="Regisseur:"/>
            <ComboBox x:Name="RegisseurComboBox" DisplayMemberPath="Naam"/>

            <Label Content="Beschrijving:"/>
            <TextBox x:Name="BeschrijvingTextBox" Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>

            <Label Content="Rating:"/>
            <TextBox x:Name="RatingTextBox" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Opslaan" Width="100" Margin="0,0,10,0" Click="SaveButton_Click"/>
                <Button Content="Annuleren" Width="100" IsCancel="True"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>