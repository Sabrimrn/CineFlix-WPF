<Window x:Class="CineFlix_WPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CineFlix - Inloggen" 
        Height="350" Width="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="15">
        <StackPanel>
            <TextBlock Text="Inloggen" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <Label Content="E-mail:"/>
            <TextBox x:Name="EmailTextBox" Text="admin@cineflix.com"/>

            <Label Content="Wachtwoord:"/>
            <PasswordBox x:Name="PasswordBox" Password="Admin123!"/>

            <TextBlock x:Name="ErrorMessage" Foreground="Red" TextWrapping="Wrap" Margin="0,10,0,0" MinHeight="30"/>

            <Button Content="Inloggen" Margin="0,20,0,10" Click="LoginButton_Click"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="Nog geen account? "/>
                <Button Content="Registreer hier" Background="Transparent" BorderBrush="Transparent" Foreground="Blue" Cursor="Hand" Click="RegisterButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

