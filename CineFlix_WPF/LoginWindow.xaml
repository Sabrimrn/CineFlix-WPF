<Window x:Class="CineFlix_WPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CineFlix_WPF"
        mc:Ignorable="d"
        Title="CineFlix - Inloggen" 
        Height="500" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Style="{StaticResource WindowStyle}">

    <Grid>
        <Border Style="{StaticResource CardStyle}" Margin="30">
            <StackPanel>
                <!-- Logo/Titel -->
                <TextBlock Text="🎬 CineFlix" 
                          Style="{StaticResource TitleStyle}"
                          FontSize="32"/>

                <TextBlock Text="Film Bibliotheek Beheer" 
                          HorizontalAlignment="Center"
                          Foreground="{StaticResource LightTextColor}"
                          FontStyle="Italic"
                          Margin="0,0,0,30"/>

                <!-- Login Form -->
                <Label Content="E-mail:" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="EmailTextBox" 
                        Style="{StaticResource InputTextBoxStyle}"
                        Text="admin@cineflix.com"/>

                <Label Content="Wachtwoord:" Style="{StaticResource LabelStyle}"/>
                <PasswordBox x:Name="PasswordBox" 
                            Style="{StaticResource InputPasswordBoxStyle}"
                            Password="Admin123!"/>

                <!-- Error Message -->
                <TextBlock x:Name="ErrorMessage" 
                          Style="{StaticResource ErrorMessageStyle}"
                          Visibility="Collapsed"/>

                <!-- Buttons -->
                <Button Content="Inloggen" 
                       Style="{StaticResource PrimaryButtonStyle}"
                       Margin="0,20,0,10"
                       Click="LoginButton_Click"/>

                <Separator Margin="0,10"/>

                <!-- Register Link -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <TextBlock Text="Nog geen account? " 
                              Foreground="{StaticResource LightTextColor}"/>
                    <Button Content="Registreer hier" 
                           Style="{StaticResource LinkButtonStyle}"
                           Click="RegisterButton_Click"/>
                </StackPanel>

                <!-- Info -->
                <TextBlock Style="{StaticResource InfoMessageStyle}"
                          TextAlignment="Center"
                          Margin="0,20,0,0">
                    <Run Text="Test accounts:"/>
                    <LineBreak/>
                    <Run Text="Admin: admin@cineflix.com / Admin123!"/>
                    <LineBreak/>
                    <Run Text="User: user@cineflix.com / User123!"/>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Window>



