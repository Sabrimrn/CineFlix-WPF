<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CineFlix_Mobile.ViewModels"
             xmlns:model="clr-namespace:CineFlix_Models;assembly=CineFlix_Models"
             x:Class="CineFlix_Mobile.Views.FilmsPage"
             Title="CineFlix Films">

    <Grid RowDefinitions="Auto, *">
        <SearchBar Grid.Row="0" 
           Placeholder="Zoek op titel..." 
           Text="{Binding SearchText}"
           SearchCommand="{Binding PerformSearchCommand}" />

        <!-- x:DataType zorgt voor betere performance en minder errors -->
        <CollectionView Grid.Row="1" ItemsSource="{Binding Films}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Film">
                    <!-- Gebruik Border in plaats van Frame voor .NET 9 -->
                    <Border Margin="10" Padding="0" StrokeShape="RoundRectangle 10" Stroke="LightGray" StrokeThickness="1">
                        <Grid ColumnDefinitions="100, *" HeightRequest="150">
                            <Image Grid.Column="0" Source="dotnet_bot.png" Aspect="AspectFill" BackgroundColor="Gray"/>

                            <StackLayout Grid.Column="1" Padding="10">
                                <Label Text="{Binding Titel}" FontSize="18" FontAttributes="Bold" />
                                <Label Text="{Binding Releasejaar}" TextColor="Gray" />
                                <Label Text="{Binding Rating, StringFormat='Rating: {0:F1}'}" TextColor="#E74C3C" />
                            </StackLayout>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>