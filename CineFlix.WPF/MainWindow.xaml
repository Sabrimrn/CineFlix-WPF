<Window x:Class="CineFlix.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CineFlix" Height="560" Width="900">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="Logout" Click="Logout_Click"/>
                <MenuItem Header="Exit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="_Manage">
                <MenuItem Header="Films" Click="Films_Click"/>
                <MenuItem Header="Regisseurs" Click="Regisseurs_Click"/>
                <MenuItem Header="Genres" Click="Genres_Click"/>
                <MenuItem Header="Roles" Click="Roles_Click"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="About" Click="About_Click"/>
            </MenuItem>
        </Menu>

        <TabControl x:Name="MainTabs">
            <TabItem Header="Dashboard">
                <Grid Margin="8">
                    <StackPanel>
                        <TextBlock Text="Welcome to CineFlix (Dashboard)" FontWeight="Bold" FontSize="16"/>
                        <TextBlock x:Name="StatText" Margin="4"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Films">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Row="0">
                        <Button Content="Add" Click="AddFilm_Click"/>
                        <Button Content="Edit" Click="EditFilm_Click"/>
                        <Button Content="Delete" Click="DeleteFilm_Click"/>
                        <TextBox x:Name="FilmSearchBox" Width="200" PlaceholderText="Search..." TextChanged="FilmSearchBox_TextChanged"/>
                        <ComboBox x:Name="GenreFilter" Width="150" SelectionChanged="Filter_Changed"/>
                        <ComboBox x:Name="RegisseurFilter" Width="150" SelectionChanged="Filter_Changed"/>
                    </StackPanel>

                    <DataGrid x:Name="FilmsGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True"
                              MouseDoubleClick="FilmsGrid_MouseDoubleClick">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Title" Binding="{Binding Titel}"/>
                            <DataGridTextColumn Header="Year" Binding="{Binding Releasejaar}"/>
                            <DataGridTextColumn Header="Regisseur" Binding="{Binding Regisseur.Naam}"/>
                            <DataGridTextColumn Header="Genres" Binding="{Binding FilmGenres}" >
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="{Binding FilmGenres, Converter={StaticResource GenresConverter}}"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="Regisseurs">
                <Grid Margin="8">
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Add" Click="AddRegisseur_Click"/>
                        <Button Content="Edit" Click="EditRegisseur_Click"/>
                        <Button Content="Delete" Click="DeleteRegisseur_Click"/>
                    </StackPanel>
                    <DataGrid x:Name="RegisseursGrid" Margin="0,36,0,0" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Naam}"/>
                            <DataGridTextColumn Header="Year" Binding="{Binding Geboortejaar}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="Genres">
                <Grid Margin="8">
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Add" Click="AddGenre_Click"/>
                        <Button Content="Edit" Click="EditGenre_Click"/>
                        <Button Content="Delete" Click="DeleteGenre_Click"/>
                    </StackPanel>
                    <DataGrid x:Name="GenresGrid" Margin="0,36,0,0" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Genre" Binding="{Binding GenreNaam}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="Roles" x:Name="RolesTab">
                <Grid Margin="8">
                    <TextBlock Text="Role management (Admins only)"/>
                    <DataGrid x:Name="UsersGrid" Margin="0,24,0,0" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}"/>
                            <DataGridTemplateColumn Header="Actions">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Roles" Click="ManageRoles_Click" Tag="{Binding}"/>
                                            <Button Content="Block" Click="ToggleBlock_Click" Tag="{Binding}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>