<Window x:Class="CineFlix.WPF.FilmWindow" Height="320" Width="420" Title="Film">
    <Grid Margin="12">
        <Grid.RowDefinitions><RowDefinition Height="*"/><RowDefinition Height="Auto"/></Grid.RowDefinitions>
        <StackPanel>
            <TextBlock>Title</TextBlock><TextBox x:Name="Titel"/>
            <TextBlock>Year</TextBlock><TextBox x:Name="Year"/>
            <TextBlock>Duration (min)</TextBlock><TextBox x:Name="Duration"/>
            <TextBlock>Regisseur</TextBlock><ComboBox x:Name="RegisseurBox" DisplayMemberPath="Naam"/>
            <TextBlock>Genres (ctrl-click)</TextBlock><ListBox x:Name="GenresList" SelectionMode="Extended" DisplayMemberPath="GenreNaam" Height="80"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Save" Click="Save_Click"/>
            <Button Content="Cancel" Click="Cancel_Click" Margin="6,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>