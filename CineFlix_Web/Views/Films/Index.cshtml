@model IEnumerable<CineFlix_Models.Film>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Nieuwe Film</a>
    </p>
}

<div class="mb-3">
    <div class="input-group">
        <input type="text" id="ajaxSearchBox" class="form-control" placeholder="Zoek op titel..." value="@ViewData["CurrentFilter"]" />
        <a asp-action="Index" class="btn btn-secondary">Reset</a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Titel)</th>
            <th>@Html.DisplayNameFor(model => model.Beschrijving)</th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]" asp-route-searchString="@ViewData["CurrentFilter"]">
                    @Html.DisplayNameFor(model => model.Releasejaar) ⇅
                </a>
            </th>
            <th>@Html.DisplayNameFor(model => model.DuurMinuten)</th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["RatingSortParm"]" asp-route-searchString="@ViewData["CurrentFilter"]">
                    @Html.DisplayNameFor(model => model.Rating) ⇅
                </a>
            </th>
            <th>@Html.DisplayNameFor(model => model.Regisseur)</th>
            <th>Acties</th>
        </tr>
    </thead>
    <tbody id="filmTableBody">
        <partial name="_FilmTableBody" model="Model" />
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#ajaxSearchBox").on("keyup", function () {
                var value = $(this).val();

                $.ajax({
                    url: '@Url.Action("AjaxSearch", "Films")',
                    type: "GET",
                    data: { searchString: value },
                    success: function (result) {
                        $("#filmTableBody").html(result);
                    }
                });
            });
        });
    </script>
}